{
  "name": "mjt-ui-monorepo",
  "version": "1.0.0",
  "private": "true",
  "type": "module",
  "description": "MJT UI Component Library",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm -C play dev",
    "doc:dev": "pnpm -C docs dev",
    "build": "pnpm run build:utils && pnpm run build:theme && pnpm run build:components",
    "build:utils": "pnpm -C packages/utils build",
    "build:theme": "pnpm -C packages/theme-chalk build",
    "build:components": "pnpm -C packages/components build",
    "clean": "rimraf dist packages/*/dist",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "keywords": [
    "vue",
    "vue3",
    "component-library",
    "ui"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@eslint/js": "^9.16.0",
    "@mjt/components": "workspace:*",
    "@mjt/theme-chalk": "workspace:*",
    "@mjt/utils": "workspace:*",
    "@types/mockjs": "^1.0.10",
    "async-validator": "^4.2.5",
    "dayjs": "^1.11.13",
    "eslint": "^9.16.0",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.13.0",
    "mockjs": "^1.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^20.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.0.1",
    "sass": "^1.82.0",
    "tsup": "^8.3.5",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}

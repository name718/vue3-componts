{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@nova-ui/*": ["packages/*"]
    }
  },
  "include": [
    "packages/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__",
    "**/*.spec.ts",
    "play",
    "docs"
  ]
}
